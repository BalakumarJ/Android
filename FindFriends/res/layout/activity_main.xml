<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.findfriends.MainActivity" 
	tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find My Friend"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Enter IP"
        android:inputType="phone" />

    <EditText
        android:id="@+id/display1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/display2"
        android:layout_below="@+id/display"
        android:ems="10"
        android:hint="Enter Port"
        android:inputType="number" />

    <EditText
        android:id="@+id/display2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/display1"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="text"
        tools:ignore="RtlHardcoded" />
    
    <EditText
        android:id="@+id/display3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/display2"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="number"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/Button1"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display3"
        android:layout_toRightOf="@+id/textView1"
        android:onClick="Chat"
        android:text="Enter"
        tools:ignore="HardcodedText" />

</RelativeLayout>